<div class="container-fluid">
  <%= form_with(model: event, local: true) do |form|  %>
    <% if event.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

        <ul>
          <% event.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-row">
      <div class="form-group col-md-6">
        <%= form.text_field :name, class: "form-control", placeholder: "Nombre" %>
      </div>
      <div class="form-group col-md-6">
        <%= form.text_field :category, class: "form-control", placeholder: "Categoria" %>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        <%= form.text_field :description, class: "form-control", placeholder: "Descripcion" %>
      </div>
      <div class="form-group col-md-6">
        <%= form.number_field :price, class: "form-control", placeholder: "Precio" %>
      </div>
    </div>
    <div class="d-flex justify-content-end">
      <%= form.submit "#{@event.new_record? ? "Crear" : "Actualizar" }", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
