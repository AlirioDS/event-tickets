<div class="container" style="width: 25rem;">
  <div class="card">
    <div class="card-header text-center">
      <div class="d-flex justify-content-center">
        Iniciar Sesion
      </div>
    </div>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin"}) do |form| %>
        
        <div class="form-row">
          <div class="form-group col-md-12">
            <%= form.email_field :email, class: "form-control", placeholder: "Correo" %>
          </div>
        </div>
          
        <div class="form-row">
          <div class="form-group col-md-12">
            <%= form.password_field :password, class: "form-control", placeholder: "Password", autocomplete: "new-password"%>
          </div>
        </div>
          <% if devise_mapping.rememberable? -%>
            <label>
              <%= form.check_box :remember_me, label: false %>
              Remember me
            </label>
          <% end -%>
        <div class="d-flex justify-content-end">
          <%= form.button "Iniciar Sesion", class: "btn btn-lg btn-primary btn-block" %>
        </div>
        <div class="d-flex justify-content-start">
           <%= link_to('Registrate', new_user_registration_path) %>
        </div>
      <% end %>
    </div>
</div>
