<!DOCTYPE html>
<html>
  <head>
    <title>EventProducer</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render template: './layouts/navbar' %>
    <% if notice.present? %>
      <p class="notice alert alert-success"><%= notice %></p>
    <% elsif alert.present? %>
      <p class="alert alert-danger" role="alert"><%= alert %></p>
    <% end %>
    <%= yield %>
  </body>
</html>
